<S1>:
    
    Widget:
        size: 800,600
        size_hint : None,None
        center_x: root.center_x
        center_y: root.center_y
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "story1.jpg"
    Button:
        size: 150,80
        size_hint : None,None
        center_x: 900
        center_y: 100
        on_release: root.manager.current = "s2"
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "realgo.png"

