<StartPage>:

    music: music
    name: "startpage"

    
 
    Widget:
        size: 600,700
        size_hint : None,None
        center_x: root.center_x
        center_y: root.center_y
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "realreal.jpg"
    Widget:
        size: 700,400
        size_hint : None,None
        center_x: root.center_x
        y: 320
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "logo.png"
    Button:
        size: 400,150
        size_hint : None,None
        center_x: root.center_x
        center_y: root.top / 2.2
        on_release: root.manager.current = "menu"
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "realplay.png"
    MusicButt:
        id: music
        center_x: root.center_x * 1.4
        center_y: root.center_y * 1.82
        on_release: self.on_press
        
        
    Button:
        size: 400,150
        size_hint : None,None
        center_x: root.center_x
        center_y: root.top / 5.2
        on_release: root.manager.current = "help1"
        canvas:
            Rectangle:
                size: 400,150
                pos: self.pos
                source: "realhelp.png"






<Selectionpage>:
    name: "menu"

    butt1: butt1
    butt2: butt2
    butt3: butt3
    buttback: buttback
    

    Widget:
        size: 600,700
        size_hint : None,None
        center_x: root.center_x
        center_y: root.center_y
        canvas:
            Rectangle:
                size: self.size
                pos: self.pos
                source: "realreal.jpg"



    StageButton:
        id: butt1
        center_x: root.center_x - 200
        center_y: root.center_y
        text: "1"
        on_release: root.manager.current = "firststage"
        
    StageButton:
        id: butt2
        center_x: root.center_x 
        center_y: root.center_y
        text: "2"
        on_release: root.manager.current = "secondstage"
        

    StageButton:
        id: butt3
        center_x: root.center_x + 200
        center_y: root.center_y
        text: "3"
        on_release: root.manager.current = "thirdstage"
        

    StageButton_back:
        id: buttback
        x: 700
        y: 500
        on_release: root.manager.current = "startpage"
   

